@model MvcMovie.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "Movies";
}

<div class="container-fluid p-0">
    <div class="bg-black text-yellow p-4 border-bottom border-yellow">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="m-0">
                <i class="bi bi-collection-play"></i> Movies
            </h1>
            <a asp-action="Create" class="btn btn-yellow">
                <i class="bi bi-plus-circle"></i> Create New
            </a>
        </div>
    </div>

    <div class="bg-dark text-yellow p-3 mb-4">
        <form asp-controller="Movies" asp-action="Index" method="get">
            <div class="row g-2">
                <div class="col-md-3">
                    <select asp-for="MovieGenre" asp-items="Model.Genres" class="form-select bg-black text-yellow">
                        <option value="">All</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <input type="text" asp-for="SearchString" class="form-control bg-black text-yellow" placeholder="Search by title" />
                </div>
                <div class="col-md-2">
                    <input type="submit" value="Filter" class="btn btn-yellow w-100" />
                </div>
            </div>
        </form>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model.Movies!)
        {
            <div class="col">
                <div class="card bg-black text-yellow border-yellow h-100">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@item.Genre</h6>
                        <p class="card-text">
                            Release: @item.ReleaseDate.ToString("dd-MM-yyyy")<br />
                            Price: @item.Price.ToString("C") M
                        </p>

                        @{
                            double ratingValue = item.Rating ?? 0;
                            int fullStars = (int)Math.Floor(ratingValue);
                            bool halfStar = (ratingValue - fullStars) >= 0.5;
                            int emptyStars = 5 - fullStars - (halfStar ? 1 : 0);
                        }
                        <div class="star-rating mb-3">
                            @for (int i = 0; i < fullStars; i++)
                            {
                                <i class="bi bi-star-fill" style="color: gold;"></i>
                            }
                            @if (halfStar)
                            {
                                <i class="bi bi-star-half" style="color: gold;"></i>
                            }
                            @for (int i = 0; i < emptyStars; i++)
                            {
                                <i class="bi bi-star" style="color: gold;"></i>
                            }
                        </div>

                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-yellow">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-yellow">Details</a>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .movie-card {
        transition: all 0.3s ease;
        background-color: #111111;
        border: 1px solid #ffff00;
        overflow: hidden;
    }

    .movie-card::before {
        content: '';
        position: absolute;
        top: -2px;
        left: -2px;
        right: -2px;
        bottom: -2px;
        border: 2px solid transparent;
        border-radius: var(--bs-border-radius);
        z-index: -1;
        transition: all 0.3s ease;
    }

    .movie-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0 15px rgba(255, 255, 0, 0.5);
    }

    .movie-card:hover::before {
        border-color: #ffcc00;
        box-shadow: 0 0 20px rgba(255, 204, 0, 0.8);
    }

    .card-title {
        transition: color 0.3s ease;
    }

    .movie-card:hover .card-title {
        color: #ffcc00 !important;
    }

    .btn-sm {
        transition: all 0.2s ease;
    }

    .btn-sm:hover {
        transform: scale(1.05);
    }

    .bi-star-fill, .bi-star-half {
        color: #ffff00;
    }

    .bi-star {
        color: #333300;
        transition: color 0.3s ease;
    }

    .movie-card:hover .bi-star {
        color: #555500;
    }

    .text-yellow {
        color: #ffff00;
    }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">